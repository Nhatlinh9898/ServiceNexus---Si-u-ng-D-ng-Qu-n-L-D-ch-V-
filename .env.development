# ServiceNexus Development Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=servicenexus_dev
DB_USER=servicenexus_user
DB_PASSWORD=dev_password
DB_SSL=false
DB_MAX_CONNECTIONS=5
DB_IDLE_TIMEOUT=10000
DB_CONNECTION_TIMEOUT=2000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=1000

# JWT Configuration
JWT_SECRET=dev_jwt_secret_key_minimum_32_characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
JWT_ISSUER=servicenexus-dev
JWT_AUDIENCE=servicenexus-users

# Google AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,text/plain,text/csv

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_COMPRESS=false

# Monitoring Configuration
ENABLE_MONITORING=false
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000
PERFORMANCE_PROFILING=true

# Alert Configuration
SLACK_WEBHOOK_URL=
ALERT_ERROR_RATE=20
ALERT_RESPONSE_TIME=10000
ALERT_MEMORY_USAGE=1024
ALERT_DATABASE_ERRORS=10

# Email Configuration
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_SECURE=false
SMTP_USER=your_mailtrap_user
SMTP_PASS=your_mailtrap_pass
EMAIL_FROM=dev@servicenexus.local

# Security Configuration
BCRYPT_ROUNDS=10
SESSION_SECRET=dev_session_secret_key_here
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=lax

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=100
WS_MESSAGE_LIMIT=1000

# Backup Configuration
BACKUP_SCHEDULE=0 3 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_DIR=./backups
BACKUP_COMPRESSION=false

# Performance Configuration
ENABLE_CACHING=false
CACHE_TTL=60
ENABLE_COMPRESSION=false
COMPRESSION_LEVEL=3

# SSL Configuration
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem
SSL_PROTOCOLS=TLSv1.2,TLSv1.3

# Analytics Configuration
ENABLE_ANALYTICS=false
ANALYTICS_SAMPLE_RATE=1.0
ANALYTICS_FLUSH_INTERVAL=30000

# Development/Debug Configuration
DEBUG=true
VERBOSE_LOGGING=true
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=true

# Third-party Services
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=
FACEBOOK_PIXEL_ID=

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_FILE_UPLOAD=true
ENABLE_REAL_TIME_FEATURES=true
ENABLE_NOTIFICATIONS=true
ENABLE_REPORTS=true

# Business Configuration
DEFAULT_CURRENCY=VND
DEFAULT_TIMEZONE=Asia/Ho_Chi_Minh
DEFAULT_LANGUAGE=vi
SUPPORTED_LANGUAGES=vi,en

# API Configuration
API_VERSION=v1
API_PREFIX=/api
API_RATE_LIMIT=10000
API_TIMEOUT=30000

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
FRONTEND_BUILD_PATH=./dist
FRONTEND_CACHE_MAX_AGE=0

# Database Pool Configuration
DB_POOL_MIN=1
DB_POOL_MAX=5
DB_POOL_ACQUIRE_TIMEOUT=30000
DB_POOL_IDLE_TIMEOUT=10000

# Redis Session Configuration
REDIS_SESSION_PREFIX=sess:dev:
REDIS_SESSION_TTL=86400
REDIS_SESSION_MAX_AGE=604800

# File Storage Configuration
STORAGE_TYPE=local
STORAGE_PATH=./uploads
STORAGE_MAX_SIZE=1073741824
STORAGE_ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx

# Notification Configuration
NOTIFICATION_QUEUE_NAME=notifications_dev
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=1000

# Search Configuration
SEARCH_INDEX_NAME=servicenexus_dev
SEARCH_BATCH_SIZE=10
SEARCH_REFRESH_INTERVAL=300

# Maintenance Configuration
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="ServiceNexus is currently under maintenance"
MAINTENANCE_ALLOWED_IPS=127.0.0.1,::1

# Compliance Configuration
GDPR_COMPLIANCE=false
DATA_RETENTION_DAYS=30
AUDIT_LOG_RETENTION_DAYS=90

# Scaling Configuration
CLUSTER_MODE=false
CLUSTER_WORKERS=0
GRACEFUL_SHUTDOWN_TIMEOUT=10000

# Hot Reload Configuration
CHOKIDAR_HOT_RELOAD=true
VITE_API_URL=http://localhost:3000
VITE_WS_URL=ws://localhost:3000
